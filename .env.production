# Production Environment Variables for Render.com
# Set these in your Render Dashboard - Environment tab

DEBUG=False
SECRET_KEY=  # Auto-generated by Render
ALLOWED_HOSTS=*.onrender.com

# Database - Render PostgreSQL (Auto-configured when you add database)
DATABASE_URL=  # Auto-provided by Render PostgreSQL

# AI Configuration (Required - Set in Render Dashboard)
# Get Gemini API key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=
GEMINI_API_KEY_BACKUP=

# Optional: OpenAI (if you want GPT support later)
# OPENAI_API_KEY=

# Optional: Google Translate API (for translation features)
# GOOGLE_TRANSLATE_API_KEY=
# GOOGLE_TRANSLATE_PROJECT_ID=

# Frontend URL (your deployed app URL)
FRONTEND_URL=https://your-app.onrender.com

# Deployment Settings (Auto-set by Render)
RENDER=true
PYTHON_VERSION=3.12.0
